	// 4. 요청에 대한 응답 받기 - onreadystatechange, readyState, status, response
	req.onreadystatechange = function() {
		if (req.readState == 4 && ajax.status == 200) {
			
		}
	}
	// 3. 요청정보 전송 - send
	req.send();
